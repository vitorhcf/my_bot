<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_bot">
    
    <xacro:include filename="inertial_macros.xacro"/>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- Define the robot's base -->
    <link name="base_link">

    </link>
    
    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.07 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.105 0 0.03"/>
            <geometry>
                <box size="0.21 0.10 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.105 0 0.03"/>
            <geometry>
                <box size="0.21 0.10 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.4" x="0.21" y="0.10" z="0.06">
            <origin xyz="0.105 0 0.03"/>
        </xacro:inertial_box>
    </link>
    
    <!-- WHEEL LINKS -->
    <joint name="wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left"/>
        <origin xyz="0 0.05 0" rpy="-1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_left">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- WHEEL LINKS RIGHT -->
    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right"/>
        <origin xyz="0 -0.05 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="wheel_right">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Caster Wheel link -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.17 0 0"/>
    </joint>    

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.05" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>



</robot>